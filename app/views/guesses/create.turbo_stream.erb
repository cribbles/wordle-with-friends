<%= turbo_stream.update :room_dashboard do %>
  <%= render partial: 'rooms/dashboard', locals: { room: @room } %>
<% end %>
<%= turbo_stream.update :room_form do %>
  <%= render template: 'guesses/new', locals: { room: @room, guess: @guess } %>
<% end %>
<%= turbo_stream.update :room_keyboard do %>
  <%= render partial: 'rooms/keyboard',
    locals: { room: @room, seen_letters: current_player.seen_letters } %>
<% end %>
