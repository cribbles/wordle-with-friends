<div class="game">
  <div class="board-container">
    <div class="board">
      <%= turbo_stream_from player, :guesses %>
      <%= turbo_frame_tag dom_id(player),
        src: room_player_guesses_path(player.room, player) %>
      <% # TODO: CSS hack %>
      <% Player::MAX_GUESSES.times do %>
        <%= render partial: 'guesses/empty_row' %>
      <% end %>
    </div>
  </div>
</div>
